<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ProjectEuclidPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>my.euclid.db.Chapters</class>
    <class>my.euclid.db.Lessons</class>
    <class>my.euclid.db.Modules</class>
    <class>my.euclid.db.SystemSkins</class>
    <class>my.euclid.db.History</class>
    <class>my.euclid.db.Users</class>
    <class>my.euclid.db.Bookmarks</class>
    <class>my.euclid.db.Questions</class>
    <class>my.euclid.db.AnswerSheet</class>
    <class>my.euclid.db.Exams</class>
    <class>my.euclid.db.ExamRecords</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby:db/ProjectEuclid"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
